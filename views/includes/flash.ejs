
<div class="flash-messages mt-3">
  <% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-10 col-md-6 offset-md-3" role="alert">
      <%= success %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  <% } %>

  <% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-10 col-md-6 offset-md-3" role="alert">
      <%= error %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  <% } %>
</div>

